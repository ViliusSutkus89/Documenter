# ci-scripts/lib/getVersion.pm is symlinked to ci-scripts/getVersion
# This is needed to make this script both a module and a script.

package getVersion;
use strict;
use warnings;

use base 'Exporter';
our $VERSION = '2.0.0';
our @EXPORT = qw(getVersion);
our @EXPORT_OK = qw(getVersionCode getAppVersionCode getAppVersion getAppReleaseNumber);

use File::Basename 'dirname';
use Getopt::Long;
sub getLibDir {
    my $thisDir = File::Basename::dirname(__FILE__);
    if ('lib' ne substr($thisDir, -3)) {
        return $thisDir . '/lib';
    }
    return $thisDir;
}

use lib getLibDir();
use fileParser 'grepSingleLine';
use pathResolver 'getAbsolutePath', 'getAbsolutePathOfBasedir';

my $rootDir = pathResolver::getAbsolutePathOfBasedir(getLibDir, 2);

sub getAppVersion {
    my ($appVersion) = fileParser::grepSingleLine(
        pathResolver::getAbsolutePath($rootDir . '/app/build.gradle'),
        qr/versionName\s+["'](.+)["']$/
    );
    return $appVersion;
}

sub getAppVersionCode {
    my ($versionCode) = fileParser::grepSingleLine(
        pathResolver::getAbsolutePath($rootDir . '/app/build.gradle'),
        qr/versionCode\s+(\d+)\s*$/
    );
    return $versionCode;
}

if (not caller()) {
    my $ci;
    Getopt::Long::GetOptions(ci => \$ci);
    if (defined $ci) {
        print "::set-output name=version::", getAppVersion(), "\n";
        print "::set-output name=versionCode:", getAppVersionCode(), "\n";
    }
    print getAppVersion(), "\n";
}

1;
